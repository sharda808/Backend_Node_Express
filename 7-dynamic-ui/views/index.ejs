 <%- include('partials/head')%>
</head>
<body class="min-h-screen bg-gray-100">
 <%- include('partials/nav')%>

  
  <main class="max-w-6xl mx-auto px-6 py-10">
 <h1 class="text-4xl font-extrabold text-blue-900 mb-8 text-center">
      Welcome to Hamara Airbnb
    </h1>

    <ul class="grid gap-6 sm:grid-cols-2 md:grid-cols-3">
      <% homes.forEach(home => { %>
        <li class="bg-white p-6 rounded-xl shadow-md
                   text-blue-900 font-semibold text-lg
                   hover:shadow-lg transition duration-300">
          <%= home.houseName %>
        </li>
      <% }); %>
    </ul>

  </main>

</body>
</html>


